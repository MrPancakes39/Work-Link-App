<?xml version='1.0' encoding='utf-8'?>
<widget id="com.salmansproductions.worklink" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Work-Link</name>
    <description>
        Work-link is an app designed against a vital problem in lebanon which is unemployement by which it links individuals with others to find a suitable job or post a job opportunity.
    </description>
    <author email="salmannhassan39@gmail.com" href="https://instagram.com/salmannhassan">
        Salman Hasan
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
